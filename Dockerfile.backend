FROM gradle:8.8-jdk17 AS builder
WORKDIR /app
COPY . .

# Build the JVM backend specifically
RUN gradle :site:jvmJar --no-daemon

FROM eclipse-temurin:17-jre
WORKDIR /app

# Copy the JVM JAR - check the exact name in build logs
COPY --from=builder /app/site/build/libs/site-jvm.jar app.jar

EXPOSE 8080
CMD ["java", "-jar", "app.jar"]