# -------- Stage 1: Builder --------
FROM gradle:8.8-jdk17 AS builder

WORKDIR /app
COPY . .
WORKDIR /app/site

RUN chmod +x ../gradlew
RUN ../gradlew jvmJar -x jsTest

# -------- Stage 2: Runtime --------
FROM openjdk:17-jdk-slim
WORKDIR /app
COPY --from=builder /app/site/build/libs/*.jar app.jar

EXPOSE 8080
# Add debugging and use shell form to capture output
CMD java -cp app.jar io.ktor.server.netty.EngineMain || (echo "Application failed to start" && sleep 30)