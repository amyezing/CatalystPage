# -------- Stage 1: Builder --------
FROM gradle:8.8-jdk17 AS builder

WORKDIR /app
COPY . .

# Build the fat JAR (using Shadow plugin)
RUN ./gradlew :site:shadowJar --no-daemon

# -------- Stage 2: Runtime --------
FROM openjdk:17-jdk-slim

WORKDIR /app

# Copy the fat jar from the builder stage
COPY --from=builder /app/site/build/libs/catalyst-b
