# -------- Stage 1: Builder --------
FROM gradle:8.8-jdk17 AS builder

WORKDIR /app
COPY . .
WORKDIR /app/site

RUN chmod +x ../gradlew
RUN ../gradlew shadowJar --no-daemon

# -------- Stage 2: Runtime --------
FROM eclipse-temurin:17-jdk
WORKDIR /app
COPY --from=builder /app/site/build/libs/app.jar app.jar

EXPOSE 8080
ENTRYPOINT ["java", "-jar", "app.jar"]
