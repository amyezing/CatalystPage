# -------- Stage 1: Builder --------
FROM gradle:8.8-jdk17 AS builder

WORKDIR /app
COPY . .
WORKDIR /app/site

RUN chmod +x ../gradlew
RUN ../gradlew jvmJar -x jsTest

# -------- Stage 2: Runtime --------
FROM eclipse-temurin:17-jre-jammy

WORKDIR /app

# Copy the JAR explicitly
COPY --from=builder /app/site/build/libs/catalystpage.com.jar app.jar

# Environment variable for Cloud Run
ENV PORT=8080
EXPOSE 8080

# Run the backend
ENTRYPOINT ["java", "-jar", "app.jar"]
