# -------- Stage 1: Builder --------
FROM gradle:8.8-jdk17 AS builder

WORKDIR /app

# Copy from site directory
COPY site/build.gradle.kts site/settings.gradle.kts ./
COPY site/gradle ./gradle
COPY site/src ./src

RUN chmod +x ./gradlew
RUN ./gradlew build -x test

# -------- Stage 3: Runtime --------
FROM openjdk:17-jdk-slim
WORKDIR /app
COPY --from=builder /app/build/libs/*.jar app.jar
EXPOSE 8080
ENTRYPOINT ["java", "-jar", "app.jar"]