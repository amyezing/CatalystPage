FROM gradle:8.8-jdk17 AS builder
WORKDIR /app
COPY . .
RUN chmod +x ./gradlew

# Build the Kobweb site for production
RUN ./gradlew :site:kobwebExport --no-daemon

FROM nginx:alpine

# Set Cloud Run port
RUN sed -i 's/listen\(.*\)80;/listen 8080;/' /etc/nginx/conf.d/default.conf

# Copy the exported site (static build)
COPY --from=builder /app/site/.kobweb/site/ /usr/share/nginx/html/

EXPOSE 8080
CMD ["nginx", "-g", "daemon off;"]