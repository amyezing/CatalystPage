# -------- Stage 1: Build frontend with Kobweb --------
FROM gradle:8.8-jdk17 AS builder

WORKDIR /app

# Copy the site directory (build context is 'site')
COPY . .

RUN chmod +x ./gradlew

# Build the frontend using Kobweb export
RUN ./gradlew kobwebExport -x jsTest

# -------- Stage 2: Serve with nginx --------
FROM nginx:alpine

# Copy exported frontend files from the builder stage
COPY --from=builder /app/.kobweb/site/ /usr/share/nginx/html/

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]